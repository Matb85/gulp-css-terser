{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "ES6"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "types": ["@types/node", "@types/lodash"]
}
